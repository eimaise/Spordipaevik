@using Core.Data.Entities
@model LeaderboardListVm
@{
    ViewData["Title"] = "Harjutused";
}

<div class="row">
    <div class="col">
        <div class="form-group">
            <form asp-action="ExerciseList" method="get">
                <h2 class="mt-3">Leia harjutus:</h2>
                <input id="findInput" placeholder="Otsi harjutust" class="form-control " style="margin-bottom: 10px" name="name" type="text" value=@Context.Request.Query["name"]>
           
                <button style="margin-bottom: 10px" class="btn btn-primary">Otsi</button>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 col-md-6">
        olen 4
    </div>
    <div class="col-lg-4 col-md-6">
        olen 4
    </div>
    <div class="col-lg-4">
        <button class="btn btn-primary">Button</button>
    </div>
</div>

<div class="row-3">
    <table class="table table-striped table-bordered nowrap" style="width: 100%">
        <thead>
        <tr>
            <th>Harjutus</th>
            <th style="min-width: 125px">Klass</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            <form asp-action="LeaderboardResults" asp-controller="Result" method="get">

                <tr>
                    <td>
                        <div class="form-group">
                            @{
                                var exerciselist = new SelectList(Model.Exercises, "Id", "Name");
                                if (!exerciselist.Any())
                                {
                                    <a style="margin-bottom:10px" class="btn btn-primary "asp-action="ExerciseList" method="get">
                                        Näita kõiki
                                    </a>
                                    <p>Ühtegi harjutust ei leitud : <label id="inputLabel">@Context.Request.Query["name"]</label> </p>
                                }
                                else
                                {
                                    <select class="form-control"name="exerciseId" asp-items="exerciselist">
                                    </select>
                                    
                                }
                            }
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @{
                                var list = new SelectList(Model.Classes);
                                 <select class="form-control"name="classNumber" asp-items="list">
                                 </select>
                            }
                        </div>
                        <div class="form-group">
                            @{
                                var sugu = new {Id = (int) Gender.Man, Name = "Poisid"};
                                var sugu2 = new {Id = (int) Gender.Woman, Name = "Tüdrukud"};

                                var list2 = new SelectList(new[] {sugu, sugu2}.ToList(), "Id", "Name");
                                <select class="form-control" name="gender" asp-items="list2">
                                </select>
                            }
                        </div>
                    </td>
                    <td>
                        <button class="btn btn-primary"type="submit">Näita tulemusi</button>
                    </td>
                </tr>
            </form>
        </tbody>
    </table>
</div>

