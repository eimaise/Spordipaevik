<div class="row">
    <div class="col">

        <table id="example" class="table table-striped table-bordered nowrap" style="width: 100%">
            <thead>
            <tr>
                <th>Email</th>
                <th>Nimi</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var teacher in Model.Teachers)
            {
                <tr>
                    <td>
                        <p>@teacher.Email</p>
                    </td>
                    <td>
                        <p>@teacher.Name</p>
                    </td>
                </tr>
            }
            </tbody>
        </table>
      
        <a asp-action="AddTeacher" class="btn btn-primary">Saada uus kutse</a>
    </div>
</div>