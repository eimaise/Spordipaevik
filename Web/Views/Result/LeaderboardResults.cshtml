@model WebApplication2.ViewModels.Results.LeaderBoardResultListVm

@{
    ViewData["Title"] = "Harjutused";
}
<div class="row mb-4">
    <div class="col">
        <form method="get" asp-action="LeaderboardResults">
            <input name="ExerciseId" type="hidden" value="@Model.ExerciseId" />
            <input name="ClassNumber" type="hidden" value="@Model.ClassNumber" />
            <input name="Gender" type="hidden" value="@Model.Gender" />
            <label>Viimased aastad</label>
            <div class="form-row">
                <div class="col-lg">
                    <input class="form-control" name="year" type="number" />
                </div>
                <div class="col-lg-auto">
                    <button class="btn btn-primary btn-wide d-block mt-2 mt-lg-0" type="submit">Vali</button>
                </div>
            </div>
        </form>
    </div>
</div>
<table class="table table-striped table-borderless nowrap" style="width: 100%">
    <thead>
        <tr>
            <th>Nimi</th>
            <th>Tulemus</th>
            <th>Kuupäev</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model.LeaderBoardResult)
        {
            <tr>
                <td>
                    @result.Name
                </td>
                <td>
                    @result.ResultValue
                </td>
                <td>
                    @result.DateTime.ToString()

                </td>
            </tr>
        }
    </tbody>
</table>